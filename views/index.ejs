        <div class="form-container">
            <form class="form mt-5" action="/addTodo" method="post">
                <span class="heading mb-4">Volunteer Registration Form</span>

                <div class="form-group">
                    <input class="form-input" required="" type="todo" name="todo" />
                    <label>Name</label>
                </div>

                <div class="form-group">
                    <input class="form-input" required="" type="email" name="email" />
                    <label>Email</label>
                </div>

                <div class="form-group">
                    <input class="form-input" required="" type="number" name="number" />
                    <label>Number</label>
                </div>

                <div class="form-group">
                    <input class="form-input" required="" type="text" name="skill" />
                    <label>Skill</label>
                </div>

                <button type="submit">SUBMIT</button>
            </form>
        </div>


        <div class="px-5 mt-3">
            <h2 class="text-white">
                Volunteer's Data------------------------------------------------------
            </h2>
            <hr />

            <row>
                <div class="grid">
                    <% todos.forEach((t)=>{ %>
                        <div class="g-col-12 g-col-xxl-3 g-col-lg-4 g-col-md-6 g-col-sm-6 g-col-xs-12">
                            <div class="card">
                                <div class="card-body">
                                    <div>
                                        <h1 class="card-title">
                                            <%= t.todo %>
                                        </h1>
                                        <h6 class="card-title">
                                            <%= t.email %>
                                        </h6>
                                        <h6 class="card-title">
                                            <%= t.number %>
                                        </h6>
                                        <h6 class="card-title">
                                            <%= t.skill %>
                                        </h6>

                                    </div>
                                    <div class="d-flex mt-3 gap-2 justify-content-end">
                                        <a href="/editTodo/<%=t.id%>" class="btn btn-warning">Edit</a>
                                        <a href="/deleteTodo/<%=t.id%>" class="btn btn-primary">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </row>
            

        </div>
