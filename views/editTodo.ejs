    <div class="form-containe">
        <form class="form mt-5" action="/updateTodo/<%= singleTodo.id %>" method="post">
            <span class="heading mb-4">Update Volunteer Data</span>

            <input type="text" name="id" value="<%= singleTodo.id%>" hidden />
            <div class="form-group">
                <input class="form-input" required="" type="todo" name="todo" value="<%= singleTodo.todo%>" />
                <label>Name</label>
            </div>

            <div class="form-group">
                <input class="form-input" required="" type="email" name="email" value="<%= singleTodo.email%>" />
                <label>Email</label>
            </div>

            <div class="form-group">
                <input class="form-input" required="" type="number" name="number" value="<%= singleTodo.number%>" />
                <label>Number</label>
            </div>

            <div class="form-group">
                <input class="form-input" required="" type="text" name="skill" value="<%= singleTodo.skill%>" />
                <label>Skill</label>
            </div>

            <button type="submit">Update</button>
        </form>
    </div>
